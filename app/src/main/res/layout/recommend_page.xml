                           android:textSize="12dp"
                           android:layout_alignTop="@+id/label2"
                           android:layout_marginLeft="15dp"
                           />
                   </RelativeLayout>

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_marginLeft="5dp"
                       android:layout_marginTop="5dp"
                       android:layout_height="90dp">
                       <TextView
                           android:id="@+id/note_title2"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="魔都：寂静的繁华似锦"
                           android:textColor="@color/black"
                           android:textSize="15dp"

                           />

                       <TextView
                           android:id="@+id/note_content2"
                           android:layout_below="@id/note_title2"
                           android:layout_width="match_parent"
                           android:layout_height="50dp"
                           android:layout_marginTop="5dp"
                           android:lineSpacingExtra="3dp"
                           android:paddingBottom="10dp"
                           android:text="安顿在这个城市已有十年，十年尚不能了然认知一个人，亦或一座城，更何况是这座唤作魔幻之都的城呢"
                           android:textColor="@color/white" />

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_below="@id/note_content2"
                           android:orientation="horizontal">

                           <TextView
                               android:id="@+id/comment_num2"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="2dp"
                               android:text="4562"
                               android:textColor="@color/white"
                               android:textSize="10dp" />

                           <TextView
                               android:id="@+id/comment2"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="5dp"
                               android:layout_marginTop="2dp"
                               android:text="评论"
                               android:textColor="@color/white"
                               android:textSize="10dp" />



                           <TextView
                               android:id="@+id/collection_num2"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="15dp"
                               android:layout_marginTop="2dp"
                               android:text="1458"
                               android:textColor="@color/white"
                               android:textSize="10dp" />

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="5dp"
                               android:layout_marginTop="2dp"
                               android:text="收藏"
                               android:textColor="@color/white"
                               android:textSize="10dp" />

                       </LinearLayout>
                   </RelativeLayout>

               </LinearLayout>

           </LinearLayout>

           <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="152dp"
               android:layout_marginTop="15dp"
               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="@drawable/bg_round_white"
                   android:orientation="vertical"
                   android:weightSum="1">

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="30dp"
                       android:layout_below="@+id/note_image"
                       android:layout_marginTop="5dp">

                       <com.travelNotes.common.XCRoundImageView
                           android:id="@+id/recommend_image3"
                           android:layout_width="25dp"
                           android:layout_height="25dp"
                           android:layout_centerVertical="true"
                           android:src="@mipmap/recommend_image" />

                       <TextView
                           android:id="@+id/label3"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerVertical="true"
                           android:layout_marginLeft="15dp"
                           android:layout_toEndOf="@+id/recommend_image3"
                           android:layout_toRightOf="@+id/recommend_image3"
                           android:text="专栏：风景"
                           android:textColor="@color/white"
                           android:textSize="12dp" />

                       <TextView
                           android:id="@+id/time3"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_toRightOf="@+id/label3"
                           android:text="1月前"
                           android:textColor="@color/white"
                           android:textSize="12dp"
                           android:layout_alignTop="@+id/label3"
                           android:layout_marginLeft="15dp"
                           />
                   </RelativeLayout>

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_marginLeft="5dp"
                       android:layout_marginTop="5dp"
                       android:layout_height="90dp">
                       <TextView
                           android:id="@+id/note_title3"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="怒江，与神共度一个平安夜"
                           android:textColor="@color/black"
                           android:textSize="15dp"

                           />

                       <TextView
                           android:id="@+id/note_content3"
                           android:layout_below="@id/note_title3"
                           android:layout_width="match_parent"
                           android:layout_height="50dp"
                           android:layout_marginTop="5dp"
                           android:lineSpacingExtra="3dp"
                           android:paddingBottom="10dp"
                           android:text="12月22日从大理出发，进入怒江傈僳族自治州，怒江峡谷一直在视野里，吸引着我的心。最让我惊讶和心动的不是静静流淌的江水，或者山上鳞次栉比的村庄，而是在冬天成片绽放的油菜花田，顿觉这是个多美好的地方。"
                           android:textColor="@color/white" />

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
